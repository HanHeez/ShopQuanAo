<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhiteGrey"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:src="@drawable/background_gradient"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/q_logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xin chào, " />

                    <TextView
                        android:textColor="@color/colorWhite"
                        android:id="@+id/txtHello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="chào mừng bạn đến với Quara!" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnDangKy"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:layout_marginBottom="5dp"

                android:background="@color/colorOrange"
                android:text="Đăng nhập / Đăng ký"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/baseline_comment_black_24dp"
            android:drawablePadding="25dp"
            android:text="Tin nhắn"
            android:textAlignment="textStart"
            android:textAllCaps="false" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginTop="2dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/baseline_shop_black_24dp"
            android:drawablePadding="25dp"
            android:text="Đơn hàng của tôi"
            android:textAlignment="textStart"
            android:textAllCaps="false" />
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginTop="2dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/baseline_favorite_border_black_24dp"
            android:drawablePadding="25dp"
            android:text="Wishlist và gian hàng đã theo dõi"
            android:textAlignment="textStart"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginTop="1dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/baseline_settings_black_24dp"
            android:drawablePadding="25dp"
            android:text="Cài đặt"
            android:textAlignment="textStart"
            android:textAllCaps="false" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginTop="2dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/baseline_help_outline_black_24dp"
            android:drawablePadding="25dp"
            android:text="Trợ giúp"
            android:textAlignment="textStart"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btnLogOut"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="gone"
            android:textColor="@color/colorDarkGrey"
            android:layout_marginTop="2dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:drawableLeft="@drawable/log_out"
            android:drawablePadding="25dp"
            android:text="Đăng xuất"
            android:textAlignment="textStart"
            android:textAllCaps="false" />
    </LinearLayout>


</LinearLayout>