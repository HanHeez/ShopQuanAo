<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">#00FFFFFF</item>
    </style>

    <style name="capfale" parent="TextAppearance.Design.Tab" >
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>
    
    <style name="DoiMauRatingBar" parent="AppTheme" >
        <item name="android:colorControlNormal">@color/colorOrange</item>
    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:progressBarStyle">@android:style/Widget.Holo.Light.ProgressBar.Large</item>
        <item name="colorAccent">#ba1212</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <declare-styleable name="PasswordEditText" >
        <attr name="useStrike" format="boolean"></attr>
        <attr name="useValidate" format="boolean"> </attr>
    </declare-styleable>
    
    
</resources>
